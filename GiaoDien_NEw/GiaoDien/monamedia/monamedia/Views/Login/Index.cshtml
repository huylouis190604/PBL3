
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<main id="primary" class="site-main">
    <article id="post-4588" class="post-4588 page type-page status-publish hentry">

        <!--breadcrumb section start-->
        <div class="breadcrumb-section pt-40 pb-40">
            <div class="container">
                <div class="breadcrumb breadcrumb-text fw-light mb-0"><a href="../index.html" title="Trang chủ" rel="bookmark" class="breadcrumb-item">Trang chủ</a> <span class="bredcrumb-separator"> / </span> <span class="">My account</span></div>
            </div>
        </div>
        <!--breadcrumb section end-->


        <div class="container electio-condensed-container">
            <div class="post-content electio-default-page-content">
                <div class="woocommerce">
                    <div class="woocommerce-notices-wrapper">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["SuccessMessage"]
                            </div>
                        }


                    </div>

                    <div class="row gx-5" id="customer_login">

                        <div class="col-12 col-md-6">
                            <h2>Đăng ký</h2>

                            @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="username">Tên đăng ký&nbsp;<span class="required">*</span></label>
                                    <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="username" id="username" autocomplete="username" value="">
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="password">Mật khẩu&nbsp;<span class="required">*</span></label>
                                    <span class="password-input"><input class="woocommerce-Input woocommerce-Input--text input-text" type="password" name="password" id="password" autocomplete="current-password"><span class="show-password-input"></span></span>
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="email">Email&nbsp;<span class="required">*</span></label>
                                    <input type="email" class="woocommerce-Input woocommerce-Input--text input-text" name="email" id="email" autocomplete="email" value="">
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="fullname">Họ tên&nbsp;<span class="required">*</span></label>
                                    <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="fullName" id="fullName" autocomplete="fullname" value="">
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="birthDate">Ngày sinh&nbsp;<span class="required">*</span></label>
                                    <input type="date" class="woocommerce-Input woocommerce-Input--text input-text" name="birthDate" id="birthDate" autocomplete="birthdate">
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="gender">Giới tính&nbsp;<span class="required">*</span></label><br>
                                    <input type="checkbox" class="woocommerce-Input woocommerce-Input--checkbox input-checkbox" name="gender" id="gender" value="1" autocomplete="gender" checked="checked">
                                    <label for="gender">Nam</label>
                                    <input type="checkbox" class="woocommerce-Input woocommerce-Input--checkbox input-checkbox" name="gender" id="gender" value="0" autocomplete="gender">
                                    <label for="gender">Nữ</label>
                                </p>



                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="address">Địa chỉ&nbsp;<span class="required">*</span></label>
                                    <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="address" id="address" autocomplete="address">
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="phoneNumber">Số điện thoại&nbsp;<span class="required">*</span></label>
                                    <input type="tel" class="woocommerce-Input woocommerce-Input--text input-text" name="phoneNumber" id="phoneNumber" autocomplete="tel">
                                </p>
                                <p class="form-row">
                                    <button type="submit" class="woocommerce-button button woocommerce-form-login__submit" name="register">Đăng ký</button>
                                </p>
                            }

                        </div>
                    </div>

                </div>

                <div class="clearfix"></div>
                <div class="electio-page-comment-section">
                    <div class="container">
                    </div>

                </div>
            </div><!-- .post-content -->
        </div>
    </article><!-- #post-4588 -->

    <div class="clearfix"></div>
</main>

