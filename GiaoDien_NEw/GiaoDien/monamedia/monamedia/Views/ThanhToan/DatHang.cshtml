@model IEnumerable<monamedia.Models.C_Order>

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="order-table-container">
    <h2>Đơn Hàng Của Tôi</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Mã Khách Hàng</th>
                <th>Phương Thức</th>
                <th>Phí</th>
                <th>Tổng</th>
                <th>Ngày Đặt Hàng</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
    </table>
    <div class="scrollable-tbody-container">
        <table class="table">
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.orderID</td>
                        <td>@order.customerID</td>
                        <td>@order.method</td>
                        <td>@order.fee</td>
                        <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", order.total)</td>
                        <td>@order.timeOrder</td>
                        <td>@order.status</td>
                        <td><a href="@Url.Action("ChiTietDonHang", "ThanhToan", new { id = order.orderID })" class="btn btn-info">Xem Chi Tiết</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
